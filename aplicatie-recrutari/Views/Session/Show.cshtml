@model  aplicatie_recrutari.Models.Recruitment_Session
@{
    ViewBag.Title = "Afisare Sesiune";
}

@if (Model.Workshops.Count > 0)
{
    <h3>@Html.Label("Workshops", "Workshops:")</h3>
    <br />
    <ul>
        @{
            int counter1 = 1;

            foreach (var workshop in Model.Workshops) {
                <div class="box">
                    @*<p>Workshop numarul @workshop.WorkshopId din @workshop.Timestamp</p>*@
                    <p>Workshop numarul @counter1 din @workshop.Timestamp</p>
                    @{
                        counter1 = counter1 + 1;
                    }
                    <br /><br />
                    <a class="btn btn-success" id="buton" href="/Workshop/Show/@workshop.WorkshopId">Afisare Workshop</a>
                    <a class="btn btn-success" id="buton" href="/Workshop/Edit/@workshop.WorkshopId">Editeaza Workshop</a>

                    <form method="post" action="/Workshop/Delete/@workshop.WorkshopId">
                        @Html.HttpMethodOverride(HttpVerbs.Delete)
                        <button class="btn btn-danger" id="butond" type="submit">Stergere Workshop</button>
                    </form>
                    <br />
                </div>
                <br />
            }
        }
    </ul>

}
<br />

<a class="btn btn-primary" id="butona" href="/Workshop/New/@Model.SessionId">Adauga Workshop</a>
<br />
<hr />

