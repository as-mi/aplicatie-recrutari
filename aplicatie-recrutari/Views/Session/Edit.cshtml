@model aplicatie_recrutari.Models.Recruitment_Session
@{
    ViewBag.Title = "Update Session";
}
<h2>@ViewBag.Title</h2>
@using (Html.BeginForm(actionName: "Edit", controllerName: "Session")) {
    @Html.HttpMethodOverride(HttpVerbs.Put)
    <!--camp ascuns pentru a retine id-ul obiectului-->
    @Html.HiddenFor(b => b.SessionId)
    <br />
    @Html.Label("Period", "Period:")
    <br />
    @Html.EditorFor(b => b.Period, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(b => b.Period, "", new { @class = "text-danger" })
    <br />
    <br />
    @Html.Label("Year", "Year:")
    <br />
    @Html.Editor("Year", new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(b => b.Year, "", new { @class = "text-danger" })
    <br />
    <br />
    <button class="btn btn-primary" type="submit">Update</button>
}
